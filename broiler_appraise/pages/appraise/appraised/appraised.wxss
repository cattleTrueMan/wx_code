/**index.wxss**/
@import "../../common/lib/weui.wxss";
.index-hd {
  padding: 80rpx;
  text-align: center;
}
.index-bd {
  padding: 0;
}
.index-ft {
  padding-bottom: 20rpx;
  text-align: center;
}
